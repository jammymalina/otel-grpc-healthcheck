{
  "name": "auto_generator_service",
  "version": "1.0.0",
  "description": "",
  "main": "handler.ts",
  "scripts": {
    "prebuild": "rm -rf dist",
    "build": "esbuild src/handler.ts --bundle --external:@aws-sdk/* --minify --sourcemap --platform=node --target=es2020 --outfile=dist/handler.js",
    "postbuild": "zip -r -j dist/handler.zip dist/handler.js*",
    "deploy": "npm run build && terraform init -reconfigure -upgrade && terraform apply",
    "teardown": "npm run build && terraform init -reconfigure && terraform apply -destroy",
    "lint": "eslint --ext .ts src/"
  },
  "keywords": [],
  "author": "Jakub Jantosik",
  "license": "MIT",
  "devDependencies": {
    "@eslint/js": "9.22.0",
    "@types/aws-lambda": "8.10.147",
    "@types/node": "22.13.10",
    "esbuild": "0.25.1",
    "eslint": "9.22.0",
    "eslint-config-prettier": "10.1.1",
    "prettier": "3.5.3",
    "typescript": "5.8.2",
    "typescript-eslint": "8.26.1"
  },
  "prettier": {
    "printWidth": 120,
    "singleQuote": false,
    "trailingComma": "es5",
    "semi": true
  },
  "dependencies": {
    "@aws-sdk/client-codebuild": "3.767.0",
    "@aws-sdk/client-ssm": "^3.759.0",
    "@octokit/rest": "21.1.1",
    "winston": "3.17.0"
  }
}
